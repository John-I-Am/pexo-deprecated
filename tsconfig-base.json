{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "types": ["types.ts"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "transpileOnly": true
  },
}